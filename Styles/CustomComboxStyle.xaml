<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ComboBox">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="PART_Border" Background="White" CornerRadius="5"/>
                        <Popup x:Name="PART_Popup" Placement="Bottom" StaysOpen="False" PopupAnimation="Slide">
                            <Border Background="White" CornerRadius="5">
                                <ItemsPresenter />
                            </Border>
                        </Popup>
                        <ToggleButton x:Name="PART_ToggleButton" Template="{DynamicResource ComboBoxToggleButtonTemplate}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

</ResourceDictionary>